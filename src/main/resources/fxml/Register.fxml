<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.spellingb.controller.RegisterController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">

    <Label text="Register" style="-fx-font-size: 24px;"/>

    <TextField fx:id="usernameField" promptText="Username" />
    <PasswordField fx:id="passwordField" promptText="Password" />
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" />

    <Button text="Register" onAction="#handleRegister" prefWidth="100"/>
    <Button text="Back to Login" onAction="#switchToLogin" prefWidth="100"/>

    <Label fx:id="messageLabel" text="" style="-fx-text-fill: red;"/>

</VBox>
